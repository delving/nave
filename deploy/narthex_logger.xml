<configuration>
    <conversionRule conversionWord="coloredLevel" converterClass="play.api.Logger$ColoredLevel" />

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${application.home}/logs/application.log</file>
        <encoder>
            <pattern>%%date - [%%level] - %%thread %%n%%message%%n%%xException%%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%%date - %%coloredLevel %%X{akkaSource} - %%message%%n%%xException{5}</pattern>
        </encoder>
    </appender>

    <logger name="akka" level="INFO" />
    <logger name="org.OrgActor" level="INFO" />
    <logger name="analysis.Analyzer" level="INFO" />
    <logger name="harvest.Harvester" level="INFO" />
    <logger name="record.SourceProcessor" level="INFO" />
    <logger name="dataset.DatasetActor" level="INFO" />
    <logger name="mapping.CategoryCounter" level="INFO" />
    <logger name="mapping.Skosifier" level="INFO" />
    <logger name="play" level="INFO" />
    <logger name="application" level="INFO" />
    <logger name="dataset" level="DEBUG" />


    <root level="ERROR">
        <!--appender-ref ref="STDOUT" /-->
        <appender-ref ref="FILE" />
    </root>

</configuration>
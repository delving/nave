{% extends "oaipmh/base.xml" %}

{% block content %}
    <ListRecords>
        {% for i in items %}
            <record>
                <header>
                    <identifier>{{ i.identifier }}</identifier>
                    <datestamp>{{ i.last_modified}}</datestamp>
                    {% for set in i.sets %}
                        <setSpec>{{ set }}</setSpec>
                    {% endfor %}
                </header>
                <metadata>
                    {% if i.fields %}
                        <record  {{ i.ns|safe }}>
                            {% for field, values in i.fields.items %}
                                {% for entry in values %}
                                    <{{ field }}>{{ entry }}</{{ field }}>
                                {% endfor %}
                            {% endfor %}
                        </record>
                    {% elif i.record %}
                        {{ i.record|safe }}
                    {% endif %}
                </metadata>
            </record>
        {% endfor %}
        <resumptionToken completeListSize="{{ list_size }}"
                         cursor="{{ cursor }}">{% if  resumption_token %}{{ resumption_token }}{% endif %}</resumptionToken>
        <resumptionToken/>
    </ListRecords>
{% endblock %}
